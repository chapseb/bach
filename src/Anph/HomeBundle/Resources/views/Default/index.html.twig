{% extends '::base.html.twig' %}

{% block container %}
<div class="row">
	<div class="offset2 span9">
		<div class="container">
			<div class="row-fluid">
				<div class="span12">
					<div class="row">
						<form action="{{ formAction }}" method="post" {{ form_enctype(form) }} name="search">
						<div class="input-append">
							{{ form_widget(form.query) }}
							{{ form_widget(form._token) }}
							<button type="submit" id="appendedInputButton" class="btn btn-primary"/><i class="icon-search icon-white"></i></button>
						</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row-fluid">
	{% if sidebar|length > 0 %}
	<ul class="span2 nav nav-list well">
		{% for name,item in sidebar %}
		<li class="nav-header">{{ name }}</li>
			{% for choice in item %}
				{% if choice.selected  %}
			 	<li class="active"><a href="{{ choice.url }}">{{ choice.alias }}</a></li>
			 	{% else %}
			 	<li><a href="{{ choice.url }}">{{ choice.alias }}</a></li>
			 	{% endif %}
			{% endfor %}
		{% endfor %}		
	</ul>
	{% endif %}
	<div class="offset0 span9">
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span12">
					{{ resultCount }} r√©sultat(s)
				</div>
			</div>
			{% if searchResults|length > 0 %}
				{% for document in searchResults %}
					<div class="row-fluid">
						<div class="span9">										
							<h4>{{ document.archDescUnitTitle }}</h4>
							<h5>{{ document.headerDate }}</h5>
							{% if document.headerAuthor is defined %}
							<h6>{{ document.headerAuthor }}</h6>
							{% endif %}
							{% if document.archDescRepository is defined %}
							<h6>{{ document.archDescRepository }}</h6>
							{% endif %}
							
							<p style="text-align:justify;">
					
							</p>	
						</div>
						<div class="offset1 span2">
							<img src="http://placehold.it/140x140" class="img-polaroid">
						</div>
					</div>
					<br/>
				{% endfor %}
			{% endif %}
		</div>	
	</div>
	<div class="span2">
	
	</div>
</div>
{% endblock %}