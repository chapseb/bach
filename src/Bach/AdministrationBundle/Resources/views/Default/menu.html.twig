                {% for core in coreNames %}
                <option value="{{ core }}" {% if (coreName == core) %} selected="selected" {% endif %}>{{ core }}</option>
                {% endfor %}
            </select>
        </form>
        </li>
        <li class="menu-button">
            <a href="{{ path('administration_newcore') }}" class="btn btn-success">Ajouter un noyau</a>
