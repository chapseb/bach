{% extends '::base.html.twig' %}

{% block container %}
    <section id="login">
        <header>
            <h2>
            {% if app.request.attributes.get('_route') == 'fos_user_security_login' %}
                {% trans %}Please authenticate{% endtrans %}
            {% elseif app.request.attributes.get('_route') == 'fos_user_registration_register' %}
                {% trans %}Register a new account{% endtrans %}
            {% elseif app.request.attributes.get('_route') == 'fos_user_registration_confirmed' %}
                {% trans %}Account registered{% endtrans %}
            {% elseif app.request.attributes.get('_route') == 'fos_user_profile_show' %}
                {% trans %}User profile:{% endtrans %} {{ user.username }}
            {% elseif app.request.attributes.get('_route') == 'fos_user_profile_edit' %}
                {% trans with {'%username%': app.user.username} %}Edit %username% profile{% endtrans %}
            {% else %}
                No title for route: {{ app.request.attributes.get('_route') }}
            {% endif %}
            </h2>
        </header>
        {% block fos_user_content %}{% endblock %}
    </section>
{% endblock %}
