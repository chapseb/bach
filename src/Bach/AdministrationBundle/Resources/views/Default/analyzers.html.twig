{% extends '::base.html.twig' %}

{% block container %}
    {# MENU #}
    {% include 'AdministrationBundle:Default:adminmenu.html.twig' %}
    <div class="content w-menu">
        <form class="form-inline" action="{{ path('administration_analyzers') }}" method="POST" {{ form_enctype(form) }}>
            <fieldset>
                <legend>{% trans %}Analyzers{% endtrans %}</legend>

                {% for field in form.analyzers %}
                <div class="well">
                    <div class="row-fluid show-grid">
                        <div class="span6">Field type name&nbsp;:&nbsp;{{ form_widget(field.name) }}</div>
                        <div class="span6">Class&nbsp;:&nbsp;{{ form_widget(field.class) }}</div>
                    </div>
                </div>
                {% endfor %}
                {{ form_widget(form._token) }}
                <button name="submit" type="submit" class="btn btn-fixed btn-success">Valider</button>
            </fieldset>
        </form>
    </div>
{% endblock %}

