    {% set field_name = current_field.getSolrFieldName %}
    <div id="{{ field_name }}">
        <h4>{{ current_field.getLabel(lang) }}{% if lists[field_name] is defined %} ({{ lists[field_name] | length }}{% if show_all is sameas('false') %} - <a class="show_all" title="{{ _('Show all entries (this my take some time)') }}" href="{{ path('bach_browse', {part: field_name, show_all: 'show_all'}) }}">{{ _('Show all') }}</a>{% endif %}){% endif %}</h4>
        <section id="list_{{ field_name }}">
        {% if lists[field_name] is defined %}
            <ul>
            {% for field in lists[field_name] %}
                <li>
                {% if field_name == 'headerId' %}
                    <a href="{{ path('bach_ead_html', {docid: field.headerId}) }}">{{ field.headerTitle }}</a>
                {%- else -%}
                    <a href="{{ path('bach_search', {filter_field: field_name, filter_value: field.term}) }}">{{ field.term }}</a> ({{ field.count }})
                {%- endif -%}
                </li>
            {% endfor %}
            </ul>
        {% endif %}
        </section>
    </div>

