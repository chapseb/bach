{% extends 'AdministrationBundle:Default:main.html.twig' %}

{% block container %}
        <form class="form-inline" action="{{ path('administration_fields') }}" method="POST" {{ form_enctype(form) }}>
            <fieldset>
                <legend>{{ _('Fields') }}</legend>
                {% for field in form.fields %}
                <div class="well control-group">
                    <div class="controls">
                        <div class="row-fluid show-grid">
                            <div class="span3">{{ _('Name') }} {{ form_widget(field.name) }}</div>
                            <div class="span3">{{ _('Type') }} {{ form_widget(field.type) }}</div>
                            <div class="span3">{{ _('Default') }} {{ form_widget(field.default) }}</div>
                            <div class="span3">{{ form_widget(field.indexed)
                                }} {{ _('Indexed') }}</div>
                        </div>
                        <div class="row-fluid show-grid">
                            <div class="span12">
                                <div class="span3"></div>
                                <div class="span3">{{ form_widget(field.stored)
                                    }} {{ _('Stored') }}</div>
                                <div class="span3">{{ form_widget(field.multiValued)
                                    }} {{ _('Multivalued') }}</div>
                                <div class="span3">{{ form_widget(field.required)
                                    }} {{ _('Required') }}</div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
                {{ form_widget(form._token) }}
            <button type="submit" class="jbtn">{{ _('Validate') }}</button>
            </fieldset>
        </form>
{% endblock %}
