{% extends 'AdministrationBundle:Default:main.html.twig' %}

{% block container %}
        <form class="form-inline" action="{{ path('administration_dynamicfields') }}" method="POST" {{ form_enctype(form) }}>
            <fieldset>
                <legend>{{ _('Dynamic fields') }}</legend>
        <div class="row-fluid">

            <div class="span9">
                <div align="right">
                    <div class="btn-toolbar">
                    <form action="{{ path('administration_dynamicfields') }}" method="POST">
                        <button name="selectAll" type="submit" class="jbtn" >{{ _('Select all') }}</button>
                        <button name="deselectAll" type="submit" class="jbtn">{{ _('Unselect all') }}</button>
                        <button name="add" type="submit" class="jbtn" >{{ _('Add') }}</button>
                        <button name="remove" type="submit" class="btn btn-delete">{{ _('Delete') }}</button>

                    </form>
                    </div>
                </div>

                        {% for field in form.dynamicFields %}

                        <div class="well control-group">
                            <div class="controls">
                                <div class="row-fluid show-grid">
                                    <div class="span3">{{ _('Name') }} {{ form_widget(field.name) }}</div>
                                    <div class="span3">{{ _('Type') }} {{ form_widget(field.type) }}</div>
                                    <div class="span3">{{ _('Default') }} {{ form_widget(field.default) }}</div>
                                    <div class="span2">{{ form_widget(field.indexed)
                                        }} {{ _('Indexed') }}</div>
                                <div class="span1">
                                    <label class="checkbox">
                                        <input type="checkbox" name="test" class="largerCheckbox"/>
                                    </label>
                                </div>
                                </div>

                                <div class="row-fluid show-grid">
                                    <div class="span3">{{ form_widget(field.stored)
                                        }} {{ _('Stored') }}</div>
                                    <div class="span3">{{ form_widget(field.multiValued)
                                        }} {{ _('Multivalued') }}</div>
                                    <div class="span2">{{ form_widget(field.required)
                                        }} {{ _('Required') }}</div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                        {{ form_widget(form._token) }}
                        <button name='submit' type="submit" class="jbtn">{{ _('Validate') }}</button>
                    </div>
                </div>
            </fieldset>
        </form>
{% endblock %}
