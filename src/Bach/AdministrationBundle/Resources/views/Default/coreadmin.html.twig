{% extends 'AdministrationBundle:Default:main.html.twig' %}

{% block container %}
        <fieldset>
            <legend>{{ _('Core') }}</legend>
            <a href="#" class="jbtn">{{ _('Reload') }}</a>
            <a href="#" class="btn btn-delete">{{ _('Remove') }}</a>

            <div class="well">
                <strong>{{ _('Up since:') }}</strong> {{ coreStatus.startTime }}<br/>
                <strong>{{ _('Core directory:') }}</strong> {{ coreStatus.coreDir }}<br/>
                <strong>{{ _('Data directory:') }}</strong> {{ coreStatus.dataDir }}
            </div>
        </fieldset>
        <fieldset>
            <legend>{{ _('Index') }}</legend>
            <div class="well">
                <strong>{{ _('Indexed documents:') }}</strong> {{ coreStatus.numDocs }}
            </div>
        </fieldset>
{% endblock %}
