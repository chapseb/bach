{% block js_calls %}
    <script src="{{ asset('js/jquery.treeview.js')  }}" type="text/javascript"></script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
        $(function(){
            $('.filetree').treeview({
                collapsed: true
            });
        });
{% endblock %}
