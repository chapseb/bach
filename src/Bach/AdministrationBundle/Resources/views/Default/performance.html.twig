{% extends '::base.html.twig' %}

{% block container %}
    {# MENU #}
    {% include 'AdministrationBundle:Default:adminmenu.html.twig' %}
    <div class="content w-menu">
        <form action="{{ path('administration_performance_submit') }}" method="POST" {{ form_enctype(form) }}>
            <fieldset>
                <legend>{% trans %}Cache{% endtrans %}</legend>

                <div class="well">
                    <div class="row-fluid show-grid">
                        <div class="span4">Query result windows size</div>
                        <div class="span2">:</div>
                        <div class="span4">{{ form_widget(form.queryResultWindowsSize) }}</div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span4">Document cache size</div>
                        <div class="span2">:</div>
                        <div class="span4">{{ form_widget(form.documentCacheClass) }}</div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span4">Document cache size</div>
                        <div class="span2">:</div>
                        <div class="span4">{{ form_widget(form.documentCacheSize) }}</div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span4">Document cache initial size</div>
                        <div class="span2">:</div>
                        <div class="span4">{{ form_widget(form.documentCacheInitialSize)
                            }}</div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span4">Query result max docs cached</div>
                        <div class="span2">:</div>
                        <div class="span4">{{form_widget(form.queryResultMaxDocsCached) }}</div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span4">Query result cache size</div>
                        <div class="span2">:</div>
                        <div class="span4">{{ form_widget(form.queryResultCacheSize) }}</div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span4">Query result initial cache size</div>
                        <div class="span2">:</div>
                        <div class="span4">{{ form_widget(form.queryResultInitialCacheSize) }}</div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span4">Query result class size</div>
                        <div class="span2">:</div>
                        <div class="span4">{{ form_widget(form.queryResultClassSize) }}</div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span4">Query result Autowarm count</div>
                        <div class="span2">:</div>
                        <div class="span4">{{ form_widget(form.queryResultAutowarmCount) }}</div>
                    </div>
                    <button type="submit" class="btn btn-fixed btn-success">Valider</button>
                    {{ form_widget(form._token) }}
                </div>
            </fieldset>
        </form>
    </div>
{% endblock %}

