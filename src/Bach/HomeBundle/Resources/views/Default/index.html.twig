{% extends '::base.html.twig' %}

{% form_theme form _self %}

{% block _searchQuery_perform_search_widget %}
{% spaceless %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <button type="{{ type|default('submit') }}" {{ block('button_attributes') }}><span class="icon-search icon-white">{{ label|trans({}, translation_domain) }}</span></button>
{% endspaceless %}
{% endblock _searchQuery_perform_search_widget %}

{% block css %}
    <link href="{{ asset('css/jqrangeslider/iThing-min.css') }}" type="text/css" rel="stylesheet" media="screen" />
    <link href="{{ asset('css/jquery-ui/jquery.ui.accordion.min.css') }}" type="text/css" rel="stylesheet" media="screen" />
{% endblock %}

{% block container %}
    {% if solr_qry is defined %}
    <div class="debug">
        Raw query: <pre>{{ solr_qry }}</pre>
    </div>
    {% endif %}

    <aside id="refine" role="search">
        {% if facets is defined and searchResults|length > 0 %}
        <h2>
            {% trans %}Refine Query{% endtrans %}
            {% if filters is defined %}
            <a href="{{ path('bach_search', {query_terms: q, clear_filters: true}) }}" class="clear-btn" title="{% trans %}Clear refined query{% endtrans %}">{% trans %}Clear{% endtrans %}</a>
            {% endif %}
        </h2>
        <div id="facets">
            {% for facet_field,facet in facets %}
                <h3>{{ facet.label }}</h3>
                <div>
                    <ul>
                    {#% set index_name = 'c' ~ facet_field|capitalize %#}
                    {% set index_name = facet.index_name %}
                    {% for facet,count in facet.content %}
                        {% if attribute(filters, index_name) is not defined or attribute(filters, index_name) is defined and facet not in attribute(filters, index_name) %}
                        <li>
                            <a href="{{ path('bach_search', {query_terms: q, filter_field: index_name, filter_value: facet}) }}">{{ facet }} ({{ count }})</a>
                        </li>
                        {% endif %}
                    {% endfor %}
                    </ul>
                </div>
            {% endfor %}
        </div>
        {% endif %}

        {% if sidebar|length > 0 %}
        <h2>{% trans %}Search options{% endtrans %}</h2>
        <div id="search_options">
            {% for name,item in sidebar %}
            <h3>{{ name }}</h3>
            <div>
                <ul>
                {% for choice in item %}
                    <li{% if choice.selected  %} class="active"{% endif %}><a href="{{ choice.url }}">{{ choice.alias }}</a></li>
                {% endfor %}
                </ul>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </aside>

    <div class="content w-menu">
        <div id="dates_range" class="hidden"></div>
        {% if filters is defined %}
            {% set coma = ', ' %}
            <nav id="active_filters">
                <strong>{% trans %}Active filters:{% endtrans %}</strong>
                {% for filter_name,values in filters %}
                <em>{{ filter_name }}:</em>
                <ul>
                    {% for value in values %}
                    <li>
                        <a href="{{ path('bach_search', {query_terms: q, rm_filter_field: filter_name, rm_filter_value: value}) }}" class="remove_filter" title="{% trans %}Remove filter on '%value%'{% endtrans %}">
                            {{- value -}}
                        </a>{% if loop.revindex > 1  %}{{- coma }}{% endif %}
                    </li>
                    {% endfor %}
                </ul>
                {% endfor %}
            </nav>
        {% endif %}

        <div>
            <form action="{{ path('bach_do_search') }}" method="post" {{ form_enctype(form) }} name="search">
                <div class="input-append">
                    {{ form_widget(form.query) }}
                    {{ form_widget(form._token) }}
                    {{ form_widget(form.perform_search) }}
                </div>
            </form>
            {% if suggestions is defined and searchResults is defined and searchResults|length > 0 %}
            <aside id="suggestions">
                {% trans %}Additionnal serch suggestions:{% endtrans %}
                {% for term,termResult in suggestions %}
                    {% if termResult|length > 0 %}
                        {% for suggest in termResult %}
                            <a href="{{ path('bach_search', {query_terms: suggest}) }}">{{ suggest }}</a>
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            </aside>
            {% endif %}
        </div>

        {% if searchResults is defined %}
        <section id="search_results" role="main">
            {% if searchResults|length > 0 %}
            <div class="results_count">
                {% if resultCount == 1 %}
                    {% trans %}1 result{% endtrans %}
                {% else %}
                    {% trans %}Results %resultStart% to %resultEnd% on %resultCount%{% endtrans %}
                {% endif %}
            </div>
                {% for document in searchResults %}
                    <article id="result_{{ document.uniqid }}" role="document" about="{{ document.fragmentid }}">
                        {% if show_pics %}
                        <figure class="result_pic">
                            {% if document.dao is defined %}
                                {{ displayDao(document.dao)|raw }}
                            {% else %}
                                <img src="{{ asset('img/noimage.png') }}" class="img-polaroid" alt=""/>
                            {% endif %}
                        </figure>
                        {% endif %}

                        <h3 property="dc:title">
                            <a href="{{ path('bach_display_document', {docid: document.fragmentid}) }}" class="display_doc">
                            {%- if hlSearchResults.getResult(document.uniqid).getField('cUnittitle')|length > 0 -%}
                                {{ hlSearchResults.getResult(document.uniqid).getField('cUnittitle')[0]|raw }}
                            {%- elseif document.cUnittitle is defined -%}
                                {{ document.cUnittitle }}
                            {%- else -%}
                                {% trans %}Untitled unit{% endtrans %}
                            {%- endif -%}
                            </a>
                        </h3>
                        {{ displayFragment(document.fragment, document.fragmentid)|raw }}
                    </article>
                {% endfor %}
                {% include 'pagination.html.twig' with {
                    currentFilters: { query_terms: q },
                    currentPage: page,
                    paginationPath: 'bach_search',
                    lastPage: totalPages
                } only %}
            {% else %}
                <p>{% trans %}No result found.{% endtrans %}</p>
                {% if scSearchResults is not null %}
                <aside id="suggestions">
                    {% trans %}Spelling suggestions:{% endtrans %}
                    {% for suggestion in scSearchResults %}
                        {% for word in suggestion.getWords() %}
                            <a href="{{ path('bach_search', {query_terms: word.word}) }}">{{ word.word }}</a>
                        {% endfor %}
                    {% endfor %}
                </aside>
                {% endif %}
            {% endif %}
        </section>
        {% else %}
            {% trans %}Welcome to Bach's!{% endtrans %}
            {% if tagcloud is defined %}
                <ul id="tagcloud">
                {% for tag,weight in tagcloud %}
                    <li>
                        <a href="{{ path('bach_search', {query_terms: tag|url_encode}) }}" class="tag{{ weight }}">{{ tag }}</a>
                    </li>
                {% endfor %}
                </ul>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}

{# Binded when not in mobile mode #}
{% block mobile_js_off %}
    $('.display_doc').click(function(){
        var _elt = $('<div id="display_doc" title="{% trans %}Consult document{% endtrans %}"></div>');
        _elt.appendTo('body');

        var _width = $(window).width() * 0.8;
        var _height = $(window).height() * 0.8;

        $.get(
            $(this).attr('href') + '/ajax',
            function(data) {
                _elt.append(data);
                _elt.dialog({
                    height: _height,
                    width: _width,
                    modal: true,
                    close: function(event, ui){
                        _elt.remove();
                    }
                });
            }
        );

        return false;
    });

    //hide menu option
    var _handle = $('<div id="handle" title="{% trans %}Hide menu{% endtrans %}">«</div>').tooltip();
    var _refine = $('#refine');
    var _content = $('.content');

    _handle.on('click', function(){
        _refine.toggleClass('hidemenu');
        _content.toggleClass('w-handle');
        _menu_visible = !_menu_visible;
        $('#dates_range').dateRangeSlider('resize');
        if ( _menu_visible ) {
            _handle.tooltip({content: '{% trans %}Hide menu{% endtrans %}'}).html('«');
        } else {
            _handle.tooltip({content: '{% trans %}Show menu{% endtrans %}'}).html('»');
        }
    });
    _refine.prepend(_handle);

{% endblock %}

{# Binded when in mobile mode #}
{% block mobile_js_on %}
    $('.display_doc').unbind('click');
    $('#handle').remove();
    $('.content').removeClass('w-handle');
    $('#refine').removeClass('hidemenu');
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jquery-ui/jquery.ui.core.min.js')  }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery-ui/jquery.ui.widget.min.js')  }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery-ui/jquery.ui.mouse.min.js')  }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery-ui/jquery.ui.position.min.js')  }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery-ui/jquery.ui.draggable.min.js')  }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery-ui/jquery.ui.resizable.min.js')  }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery-ui/jquery.ui.button.min.js')  }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery-ui/jquery.ui.dialog.min.js')  }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery-ui/jquery.ui.accordion.min.js')  }}" type="text/javascript"></script>
    <script src="{{ asset('js/jQDateRangeSlider-min.js')  }}" type="text/javascript"></script>
    <script src="{{ asset('js/bootstrap-tab.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/bootstrap-typeahead.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        var _menu_visible = true;
        function getDateString(d) {
            function pad(n){return n<10 ? '0'+n : n}
            return d.getFullYear()+ '-' + pad(d.getMonth()+1)+ '-' + pad(d.getDate());
        }
        $(function(){
            $('#facets').accordion({
                heightStyle: 'content',
                collapsible: true
            });

            {% if min_date is defined and max_date is defined %}
            var _is_first_load = true;
            $('#dates_range').removeClass('hidden').dateRangeSlider({
                formatter:function(val){
                    var year = val.getFullYear();
                    return year;
                },
                arrows: false,
                step: {
                    {{ date_step_unit }}: {{ date_step }}
                },
                bounds:
                {
                    min: new Date({{ min_date }}, 0, 1),
                    max: new Date({{ max_date }}, 11, 31)
                },
                defaultValues:
                {
                    min: new Date({{ selected_min_date }}, 0, 1),
                    max: new Date({{ selected_max_date }}, 11, 31)
                }
            }).bind("valuesChanged", function(e, data){
                if ( _is_first_load ) {
                    //valuesChanged is always triggerd once, on page load...
                    _is_first_load = false;
                } else {
                    var _loc = document.location.href;
                    var n = _loc.indexOf('?');
                    var _new_loc = _loc.substring(0, n != -1 ? n : _loc.lenght);

                    var _min = data.values.min;
                    var _min_date = _min.getFullYear(); //getDateString(_min);

                    var _max = data.values.max;
                    var _max_date = _max.getFullYear(); //getDateString(_max);

                    var _field = '';
                    var _value = '';
                    if ( _min_date != '{{ selected_min_date }}' ) {
                        _field = 'cDateBegin';
                        _value = _min_date;
                    } else if ( _max_date != '{{ selected_max_date }}' ) {
                        _field = 'cDateEnd';
                        _value = _max_date;
                    } else {
                        //nothing has changed!
                        return false;
                    }

                    _new_loc += '?filter_field=' + _field + '&filter_value=' + _value;
                    document.location = _new_loc;
                }
            });
            {% endif %}

            //handle viewer links
            //fullscreen does not work for the moment when binded into an iframe
            /*$('.result_pic > a').on('click', function(){
                var _this = $(this);
                if ( _this.find('img').length > 0 ) {
                    var _viewer = $('<iframe src="' + _this.attr('href')  + '"/>');
                    $('div.content, #refine').hide();
                    _viewer.appendTo('body');
                    return false;
                }
            });*/

            $('#searchQuery_query').typeahead({
                source: function(query, process) {
                    return $.get('{{ path('bach_suggest') }}', {q: query}, function(data){
                        return process(data)
                    });
                }
            });
        });
    </script>
{% endblock %}
