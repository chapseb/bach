            $('#dates_range').removeClass('hidden').dateRangeSlider({
                formatter:function(val){
                    var year = val.getFullYear();
                    return year;
                },
                arrows: false,
                step: {
                    {{ date_step_unit }}: {{ date_step }}
                },
                bounds:
                {
                    min: new Date({{ min_date }}, 0, 1),
                    max: new Date({{ max_date }}, 11, 31)
                },
                defaultValues:
                {
                    min: new Date({{ selected_min_date }}, 0, 1),
                    max: new Date({{ selected_max_date }}, 11, 31)
                }
            }).bind("valuesChanged", function(e, data){
                if ( _is_first_load ) {
                    //valuesChanged is always triggerd once, on page load...
                    _is_first_load = false;
                } else {
                    var _loc = document.location.href;
                    var n = _loc.indexOf('?');
                    var _new_loc = _loc.substring(0, n != -1 ? n : _loc.lenght);

                    var _min = data.values.min;
                    var _min_date = _min.getFullYear(); //getDateString(_min);

                    var _max = data.values.max;
                    var _max_date = _max.getFullYear(); //getDateString(_max);

                    var _field = '';
                    var _value = '';
                    if ( _min_date != '{{ selected_min_date }}' ) {
                        _field = 'cDateBegin';
                        _value = _min_date;
                    } else if ( _max_date != '{{ selected_max_date }}' ) {
                        _field = 'cDateEnd';
                        _value = _max_date;
                    } else {
                        //nothing has changed!
                        return false;
                    }

                    _new_loc += '?filter_field=' + _field + '&filter_value=' + _value;
                    document.location = _new_loc;
                }
            });
