<section id="search_results_mat" role="main">
    {% if searchResults is defined and searchResults.documents is not empty %}
    <div class="results_count">
        {% if resultCount == 1 %}
            {{ _('1 result') }}
        {% else %}
            {{ _('Results %resultStart% to %resultEnd% on %resultCount%')|replace({'%resultStart%': resultStart, '%resultEnd%': resultEnd, '%resultCount%': resultCount}) }}
        {% endif %}
        {% if available_orders|length > 0 or available_views|length > 0 %}
            {% spaceless %}
            <nav id="change_view">
            {% if matricules_listparameters is defined%}
                <a href="{{ path('print_matresults_page', { form_name: search_form, query_terms: q, page: page })}}" class="printLink" title="{{ _('Print the two next result pages') }}">{{ _('Print the two next result pages') }}</a>
            {% else %}
                <a href="{{ path('print_results_page', { form_name: search_form, query_terms: q, page: page })}}" class="printLink" title="{{ _('Print the two next result pages') }}">{{ _('Print the two next result pages') }}</a>
            {% endif %}
            {% if available_orders|length > 0 %}
                <label for="results_order">{{ _('Order:') }}</label>
                <select name="results_order" id="results_order_mat">
                    <option value="{{ constant('Bach\\HomeBundle\\Entity\\ViewParams::ORDER_RELEVANCE') }}"{% if results_order is constant('Bach\\HomeBundle\\Entity\\ViewParams::ORDER_RELEVANCE') %} selected="selected"{% endif %}>{{ _('Relevance (default)') }}</option>
                    {% for key,order in available_orders %}
                    <option value="{{ key }}"{% if results_order == key %} selected="selected"{% endif %}>{{ order }}</option>
                    {% endfor %}
                </select>
            {% endif %}
            {% if available_views|length > 0 %}
                {% for key,values in available_views %}
                <a href="{{ path('federate_search', {form_name: search_form, query_terms: q, view: key, page: pageEad, page_mat: page}) }}" class="btn-{{ key }}{% if view == key %} selected{% endif %}" title="{{ values.title }}">{{ values.text }}</a>
                {% endfor %}
            {% endif %}
            </nav>
            {% endspaceless %}
        {% endif %}
    </div>

    {% if view == 'thumbs' %}
        {% for document in searchResults %}
        <article id="result_{{ document.id }}" role="document" about="{{ document.id }}" class="thumbs">
            <figure class="result_pic{% if document.start_dao is not defined %} no-image{% endif %}">
                {% if document.start_dao is defined %}
                    {% set communicable = false %}
                    {% if (document.communicability_general is not defined and document.communicability_sallelecture is not defined)
                      or document.communicability_general < "now"|date('Ymd')
                      or (app.request.server.get("REMOTE_ADDR") == readingroomIp
                       and document.communicability_sallelecture < "now"|date('Ymd'))%}
                        {% set communicable = true %}
                    {% endif %}
                    {% if communicable == true%}
                        {% set series_name %}
                            {%- for i in document.start_dao|split('/') -%}
                                {%- if not loop.last -%}
                                    /{{ i }}
                                {%- endif -%}
                            {%- endfor -%}
                        {% endset %}
                        {% set images_link %}
                            {%- if viewer_uri[-1:1] != '/' -%}/{%- endif -%}
                            {%- if document.end_dao is defined and document.start_dao != document.end_dao -%}
                                series{{ series_name }}?s={{ document.start_dao|split('/')|slice(-1,1)[0] }}&e={{ document.end_dao|split('/')|slice(-1,1)[0] }}
                            {%- else -%}
                                viewer/{{ document.start_dao }}
                            {%- endif -%}
                        {% endset %}
                        <a href="{{ viewer_uri ~ images_link }}" target="_blank" >
                        {% if document.nom is defined or document.prenom is defined %}
                        <img src="{{ viewer_uri ~ 'ajax/img/' ~ document.start_dao ~ '/format/thumb' }}" alt="{{ document.nom ~ ' ' ~ document.prenoms|join(' ') }}"/>
                        {% else %}
                            <img src="{{ viewer_uri ~ 'ajax/img/' ~ document.start_dao ~ '/format/thumb' }}" alt="{{ _('Scan') }}"/>
                        {% endif %}
                        </a>
                    {% else %}
                        <img src="{{ asset('img/thumb_comm.png')}}" alt="{{ document.nom ~ ' ' ~ document.prenoms|join(' ') }}" title="{{ _('This picture is not communicable') }}" />
                    {%endif%}
                {% else %}
                    <img src="{% include '::images/noimage.html.twig' %}" alt=""/>
                {% endif %}
            </figure>
            <h3>
                <a href="{{ path('bach_display_matricules', {'docid': document.id}) }}" class="display_doc">
                    {% set name %}
                    {%- if hlSearchResults.getResult(document.id).getField('txt_nom')|length > 0 -%}
                        {{ hlSearchResults.getResult(document.id).getField('txt_nom')[0]|raw }}
                    {%- elseif document.nom is defined -%}
                        {{ document.nom|trim }}
                    {% else %}
                        {{ '' }}
                    {%- endif -%}
                    {% endset %}
                    {% set surname %}
                    {%- if hlSearchResults.getResult(document.id).getField('txt_prenoms')|length > 0 -%}
                        {{ hlSearchResults.getResult(document.id).getField('txt_prenoms')[0]|raw }}
                    {%- elseif document.prenoms is defined-%}
                        {%- for prenom in document.prenoms -%}
                        {{ prenom ~ ' ' }}
                        {%- endfor -%}
                    {%- endif -%}
                    {% endset %}
                    {% if document.annee_naissance is defined %}
                        {% set birth_date = document.annee_naissance|date('Y') %}
                    {% else %}
                        {% set birth_date = '' %}
                    {% endif %}
                        {% set full = name ~ ' ' ~ surname|trim ~ ', ' ~ birth_date %}
                    {{ full |raw }}
                </a>
            </h3>
        </article>
        {% endfor %}
    {% else %}
            <table class="matriculesTabResults list matricules">
                <thead>
                    <tr>
                        <th></th>
                        {% if 'matricule' in matricules_searchparameters %}
                            <th>
                                <!--<a href="{{ path('federate_search', {form_name: search_form, query_terms: q, results_order: constant('Bach\\HomeBundle\\Entity\\MatriculesViewParams::ORDER_MATRICULE') })|raw }}">-->{{ _('Matricule') }}<!--</a>-->
                            </th>
                        {% endif %}
                        {% if 'nom' in matricules_searchparameters %}
                        <th>
                            <a href="{{ path('federate_search', {form_name: search_form, query_terms: q, results_order: constant('Bach\\HomeBundle\\Entity\\MatriculesViewParams::ORDER_NAME')})|raw }}">{{ _('Name') }}</a>
                        </th>
                        {% endif %}
                        {% if 'prenoms' in matricules_searchparameters %}
                        <th>
                            <a href="{{ path('federate_search', {form_name: search_form, query_terms: q, results_order: constant('Bach\\HomeBundle\\Entity\\MatriculesViewParams::ORDER_SURNAME')})|raw }}">{{ _('Surnames') }}</a>
                        </th>
                        {% endif %}
                        {% if 'annee_naissance' in matricules_searchparameters %}
                        <th>
                            <a href="{{ path('federate_search', {form_name: search_form, query_terms: q, results_order: constant('Bach\\HomeBundle\\Entity\\MatriculesViewParams::ORDER_BIRTHYEAR')})|raw }}">{{ _('Year of birth') }}</a>
                        </th>
                        {% endif %}
                        {% if 'lieu_naissance' in matricules_searchparameters %}
                        <th>
                            <a href="{{ path('federate_search', {form_name: search_form, query_terms: q, results_order: constant('Bach\\HomeBundle\\Entity\\MatriculesViewParams::ORDER_BIRTHPLACE')})|raw }}">{{ _('Place of birth') }}</a>
                        </th>
                        {% endif %}
                        {% if 'classe' in matricules_searchparameters %}
                        <th>
                            <a href="{{ path('federate_search', {form_name: search_form, query_terms: q, results_order: constant('Bach\\HomeBundle\\Entity\\MatriculesViewParams::ORDER_CLASS')})|raw }}">{{ _('Class') }}</a>
                        </th>
                        {% endif %}
                        {% if 'lieu_enregistrement' in matricules_searchparameters %}
                        <th>
                            <a href="{{ path('federate_search', {form_name: search_form, query_terms: q, results_order: constant('Bach\\HomeBundle\\Entity\\MatriculesViewParams::ORDER_RECORDPLACE')})|raw }}">{{ _('Place of recording') }}</a>
                        </th>
                        {% endif %}
                        {% if 'lieu_residence' in matricules_searchparameters %}
                        <th>
                            <a href="{{ path('federate_search', {form_name: search_form, query_terms: q, results_order: constant('Bach\\HomeBundle\\Entity\\MatriculesViewParams::ORDER_RESIDENCEPLACE')})|raw }}">{{ _('Place of residence') }}</a>
                        </th>
                        {% endif %}

                        {% if 'date_enregistrement' in matricules_searchparameters %}
                        <th>
                            <a href="{{ path('federate_search', {form_name: search_form, query_terms: q, results_order: constant('Bach\\HomeBundle\\Entity\\MatriculesViewParams::ORDER_RECORDYEAR')})|raw }}">{{ _('Record year') }}</a>
                        </th>
                        {% endif %}
                        {% if 'cote' in matricules_searchparameters %}
                        <th>
                            <a href="{{ path('federate_search', {form_name: search_form, query_terms: q, results_order: constant('Bach\\HomeBundle\\Entity\\MatriculesViewParams::ORDER_COTE')})|raw }}">{{ _('Classification') }}</a>
                        </th>
                        {% endif %}
 
                    </tr>
                </thead>
                <tbody>
            {% for document in searchResults %}
                <tr vocab="http://schema.org/" typeof="Person">
                    <td class="actions">
                        <a class="display_doc" title="{{ _('Detailled description') }}" href="{{ path('bach_display_matricules', {'docid': document.id}) }}">{{ _('Detailled description') }}</a>
                        {% if document.start_dao is defined %}
                            {% set series_name %}
                                {%- for i in document.start_dao|split('/') -%}
                                    {%- if not loop.last -%}
                                        /{{ i }}
                                    {%- endif -%}
                                {%- endfor -%}
                            {% endset %}
                            {% set images_link %}
                                {%- if viewer_uri[-1:1] != '/' -%}/{%- endif -%}
                                {%- if document.end_dao is defined and document.start_dao != document.end_dao -%}
                                    series{{ series_name }}?s={{ document.start_dao|split('/')|slice(-1,1)[0] }}&e={{ document.end_dao|split('/')|slice(-1,1)[0] }}
                                {%- else -%}
                                    viewer/{{ document.start_dao }}
                                {%- endif -%}
                            {% endset %}
                            <a href="{{ viewer_uri ~ images_link }}" title="{{ _('Scan') }}" target="_blank" property="image">
                                <i class="link_viewer" title="{{ _('Scan')}}"></i>
                            </a>
                        {% endif %}
                        <a class="addBasket" title="{{ _('Add to basket')}}" href="{{ path('basket_add_mat',{'docid': document.id})}}">{{ _('Add to basket')}}
                    </td>
                    {% if 'matricule' in matricules_searchparameters %}
                        <td>
                            {% if document.matricule is defined %}
                                {{ document.matricule }}
                            {% endif%}
                        </td>
                    {% endif %}
                    {% if 'nom' in matricules_searchparameters %}
                    <td property="familyName">
                        {%- if hlSearchResults.getResult(document.id).getField('txt_nom')|length > 0 -%}
                            {{ hlSearchResults.getResult(document.id).getField('txt_nom')[0]|raw }}
                        {%- elseif document.nom is defined -%}
                            {{ document.nom }}
                        {%- endif -%}
                    </td>
                    {% endif %}

                    {% if 'prenoms' in matricules_searchparameters %}
                    <td property="givenName">
                        {%- if hlSearchResults.getResult(document.id).getField('txt_prenoms')|length > 0 -%}
                            {{ hlSearchResults.getResult(document.id).getField('txt_prenoms')[0]|raw }}
                        {%- elseif document.prenoms is defined -%}
                            {% for prenom in document.prenoms %}
                                {{ prenom }}
                            {% endfor %}
                        {%- endif -%}
                    </td>
                    {% endif %}
                    {% if 'annee_naissance' in matricules_searchparameters %}
                    <td property="birthDate">{% if document.annee_naissance is defined %}{{document.annee_naissance|date('Y') }}{% else %}-{% endif %}</td>
                    <td>
                        {%- if hlSearchResults.getResult(document.id).getField('lieu_naissance')|length > 0 -%}
                            {{ hlSearchResults.getResult(document.id).getField('lieu_naissance')[0]|raw }}
                        {%- else -%}
                            {% if document.lieu_naissance is defined %}{{ document.lieu_naissance }}{% endif %}
                        {%- endif -%}
                    </td>
                    {% endif %}
                    {% if 'classe' in matricules_searchparameters %}
                    <td>{% if document.classe is defined %}{{ document.classe|date('Y') }}{% else %}-{% endif %}</td>
                    {% endif %}
                    {% if 'lieu_enregistrement' in matricules_searchparameters %}
                    <td>
                        {%- if hlSearchResults.getResult(document.id).getField('lieu_enregistrement')|length > 0 -%}
                            {{ hlSearchResults.getResult(document.id).getField('lieu_enregistrement')[0]|raw }}
                        {%- else -%}
                            {% if document.lieu_enregistrement is defined %}{{ document.lieu_enregistrement }} {% else %}-{% endif %}
                        {%- endif -%}
                    </td>
                    {% endif %}
                    {% if 'lieu_residence' in matricules_searchparameters %}
                    <td>
                        {%- if hlSearchResults.getResult(document.id).getField('lieu_residence')|length > 0 -%}
                            {{ hlSearchResults.getResult(document.id).getField('lieu_residence')[0]|raw }}
                        {%- else -%}
                            {% if document.lieu_residence is defined %}{{ document.lieu_residence }} {% else %}-{% endif %}
                        {%- endif -%}
                    </td>
                    {% endif %}

                    {% if 'date_enregistrement' in matricules_searchparameters %}
                    <td>
                        {% if document.date_enregistrement is defined %}{{ document.date_enregistrement|date('Y') }}{% else %}-{% endif %}
                    </td>
                    {% endif %}
                    {% if 'cote' in matricules_searchparameters %}
                    <td>
                        {% if document.cote is defined %}{{ document.cote }}{% else %}-{% endif %}
                    </td>
                    {% endif %}

                </tr>
            {% endfor %}
                </tbody>
            </table>
    {% endif %}

    {% include 'BachHomeBundle:Commons:pagination.html.twig' with {
        currentFilters: { form_name: search_form, query_terms: q },
        typeDoc: 'mat',
        currentPageEad: pageEad,
        currentPageMat: page,
        paginationPath: 'federate_search',
        lastPage: totalPages
    } only %}

    {% else %}
            <p>{{ _('No result found.') }}</p>
            {% if scSearchResults is not null %}
            <aside id="suggestions">
                {{ _('Spelling suggestions:') }}
                {% for suggestion in scSearchResults %}
                    {% for word in suggestion.getWords() %}
                        <a href="{{ path('federate_search', {form_name: search_form, query_terms: word.word}) }}">{{ word.word }}</a>
                    {% endfor %}
                {% endfor %}
            </aside>
            {% endif %}
    {% endif %}
</section>
