    <fieldset class="list">
        <legend>
            {{ _('Publication tokens') }}
            <span class="btn-groups pull-right">
                <a href="{{ path("administration_queue_unblock") }}" class="btn btn-delete" title="{{ _('Delete current token in database') }}" onclick="return confirm('Etes vous sÃ»re de vouloir supprimer l\'action en cours?');" >{{ _('Delete blocked token') }}</a>
            </span>
        </legend>

        <table id="queuePublish">
            <thead>
                <tr>
                    <th>{{ _('Id') }}</th>
                    <th>{{ _('File name') }}</th>
                    <th>{{ _('Token') }}</th>
                    <th>{{ _('Action') }}</th>
                    <th>{{ _('Type') }}</th>
                </tr>
            </thead>
            <tbody>
                {% if tokens|length > 0 %}
                {% for token in tokens %}
                <tr>
                    <td>{{ token.id }}</td>
                    <td>{{ token.filename }}</td>
                    <td>{{ token.bach_token }}</td>
                    <td>{{ token.action }}</td>
                    <td>{{ token.action_type }}</td>
                </tr>
                {% endfor %}
                {% else %}
                <tr>
                    <td colspan="4">{{ _('No publication in queue') }}</td>
                </tr>
                {% endif %}
            </tbody>
        </table>
    </fieldset>

    <div id="help_window">
        <h3>{{ _('Publication queue') }}</h3>
        <div>
            <p>{{ _('Publication queue list all documents that are waiting to be published. Publication happens depending on server parameters. Line color will inform you about publication success or failure.') }}</p>
        </div>
    </div>
