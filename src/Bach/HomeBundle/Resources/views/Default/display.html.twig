{% extends '::base.html.twig' %}

{% block container %}
    {% include 'BachHomeBundle:Default:content_display.html.twig' with {'docid': docid, 'document': document, 'children': children} %}
{% endblock %}

{% block menu %}
    {% if referer is defined %}
        <h2 class="back"><a href="{{ referer }}">{% trans %}Back to search results{% endtrans %}</a></h2>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/flowplayer-3.2.12.min.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        flowplayer("a.flashplayer", "{{ asset('/img/flowplayer-3.2.16.swf') }}");
        flowplayer("a.flashmusicplayer", "{{ asset('/img/flowplayer-3.2.16.swf') }}", {
            plugins: {
                audio: {
                    url: "{{ asset('/img/flowplayer.audio-3.2.10.swf') }}"
                },
                controls: {
                    url: '{{ asset('/img/flowplayer.controls-3.2.15.swf') }}',
                    fullscreen: false,
                    height: 30,
                    autoHide: false
                }
            },
            clip: {
                autoPlay: false,
                onBeforeBegin: function() {
                    flowplayer('player').close();
                }
            }
        });
    </script>
{% endblock %}
