{% extends 'AdministrationBundle:Default:main.html.twig' %}

{% block container %}
        <form class="form-inline" action="{{ path('administration_fieldstype') }}" method="POST" {{ form_enctype(form) }}>
            <fieldset>
                <legend>{{ _('Fields types') }}}</legend>
                <div class="btn-toolbar">
                    <button name="selectAll" type="submit" class="jbtn" >{{ _('Select all') }}</button>
                    <button name="deselectAll" type="submit" class="jbtn">{{ _('Unselect all') }}</button>
                    <button name="add" type="submit" class="jbtn" >{{ _('Add') }}</button>
                    <button name="remove" type="submit" class="btn btn-delete">{{ _('Delete') }}</button>
                </div>

                {# iterate over each existing tag and render its only field: name #}
                {% for type in form.types %}
                <div class="well">
                    <div class="row-fluid show-grid">
                        <div class="span4">{{ _('Name') }} {{ form_widget(type.name) }}</div>
                        <div class="span4">{{ _('Class') }} {{ form_widget(type.class) }}</div>
                        <div class="span4">{{ _('Increment Gap') }} {{ form_widget(type.positionIncrementGap) }}</div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span4">{{ form_widget(type.sortMissingLast) }} {{ _('Sort Missing Last') }}</div>
                        <div class="span4">{{ form_widget(type.sortMissingFirst) }} {{ _('Sort Missing First') }}</div>
                        <div class="span4">{{ form_widget(type.autoGeneratePhraseQueries) }} {{ _('Autogenerate phrase queries') }}</div>
                    </div>
                </div>
                {% endfor %}
                {{ form_widget(form._token) }}
                <button name="submit" type="submit" class="jbtn">{{ _('Validate') }}</button>
            </fieldset>
        </form>
{% endblock %}

