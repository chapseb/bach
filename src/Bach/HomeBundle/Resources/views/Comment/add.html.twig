        {% for ptitle in eadfile.getParentsTitles %}
            {{ ptitle.getTitle }} > 
        {% endfor %}
        {{ eadfile.getCUnittitle  }}
    </h2>
    <h3>{% trans %}New comment{% endtrans %}</h3>
    {% include 'BachHomeBundle:Comment:add_form.html.twig' with {'docid': docid, 'form': form} %}
{% endblock %}

{% block menu %}
