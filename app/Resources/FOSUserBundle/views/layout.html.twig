{% extends '::base.html.twig' %}

{% block container %}
    <section id="login">
        <header>
            <h1>
            {% if current_route == 'fos_user_security_login' %}
                {% trans %}Please authenticate{% endtrans %}
            {% elseif current_route == 'fos_user_registration_register' %}
                {% trans %}Register a new account{% endtrans %}
            {% elseif current_route == 'fos_user_registration_confirmed' %}
                {% trans %}Account registered{% endtrans %}
            {% elseif current_route == 'fos_user_profile_show' %}
                {% trans %}User profile:{% endtrans %} {{ user.username }}
            {% elseif current_route == 'fos_user_profile_edit' %}
                {% trans with {'%username%': app.user.username} %}Edit %username% profile{% endtrans %}
            {% else %}
                No title for route: {{ current_route }}
            {% endif %}
            </h1>
        </header>
        {% block fos_user_content %}{% endblock %}
    </section>
{% endblock %}
