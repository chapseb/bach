<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
    {% block html_headers %}{% endblock %}
    {% block css %}{% endblock %}
    {% block favicon %}{% endblock %}
</head>
<body prefix="dc: http://purl.org/dc/terms/ foaf: http://xmlns.com/foaf/0.1/ gn: http://www.geonames.org/ontology#">
    {% block header %}
        {% block menu %}{% endblock %}
    {% endblock %}

    {# Main content #}
    <div id="wrapper">
        <div id="logo">
         <a href="{% if logo_url|slice(0,7) == 'http://' %}{{ logo_url }}{% else %}{{  path(logo_url) }}{% endif %}">
            <img src="{% include '::images/logo.html.twig' %}" alt="Bach" style="width:75px;"/>
        </a>
        </div>

        <div id="container">
            {% block back2top %}
                <a href="#container" id="back2top">{{ _('Back to top') }}</a>
            {% endblock %}
            <!--[if lte IE 8]>
                <div id="oldie"><strong>{{ _('Your browser is quite old, some features may not work.') }}</strong><br/>{{ _('You may have a better experience with a more recent or an alternative one.') }}</div>
            <![endif]-->
            {% block headCookie %}
            {% if cookie_param is not defined and not app.user %}
                <div id="head_cookie">
                    <a class="alert">x</a>
                    En continuant Ã  naviguer sur ce site, vous acceptez l'utilisation des cookies. <a href="{{ path("cookie_link") }}"><strong>En savoir plus</strong></a>
                </div>
            {% endif %}
            {% endblock %}
            {% block navigation %}{% endblock %}
            {% block basket_list %}{% endblock %}
            {% block searchhisto_list %}{% endblock %}
            {% block login %}{% endblock %}
            {% block flash_messages %}{% endblock %}
            {% block container %}{% endblock %}
        </div>
        {% block footer %}
        <div id="footer_wrapper">
            <div id="footer">
                &copy; {{ "now"|date("Y") }} Bach | {{ _('Designed by Anaphore') }} |
                <a href="{{ path("footer_link", {'type':  'legals'}) }}" target="_blank">{{ _('general conditions of use') }}</a> |
                <a href="{{ path("footer_link", {'type': 'credits'}) }}" target="_blank">{{ _('credits') }}</a>
                </div>
        </div>
        {% endblock %}
    </div> {# /#wrapper #}

    {% block main_js %}{% endblock %}
{% block tracker %}
    {% if tracker is not null %}
        <!-- Piwik -->
        <script type="text/javascript">
            var _paq = _paq || [];
            _paq.push(['trackPageView']);
            _paq.push(['enableLinkTracking']);
            (function() {
                var u="//stats.anaphore.eu/";
                _paq.push(['setTrackerUrl', u+'piwik.php']);
                _paq.push(['setSiteId', {{ tracker }}]);
                var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
                g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
            })();
            </script>
        <noscript><p><img src="//stats.anaphore.eu/piwik.php?idsite={{ tracker }}" style="border:0;" alt="" /></p></noscript>
        <!-- End Piwik Code -->
    {% endif %}
{% endblock %}
</body>
</html>
