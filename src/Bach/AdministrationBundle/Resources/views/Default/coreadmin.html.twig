{% extends '::base.html.twig' %}

{% block container %}
    {# MENU #}
    {% include 'AdministrationBundle:Default:adminmenu.html.twig' %}
    <div class="content w-menu">

        <fieldset>
            <legend>Core</legend>
            <a href="#" class="btn btn-danger btn-small"><i class="icon-white icon-repeat"></i>Recharger</a>
            <a href="#" class="btn btn-inverse btn-small"><i class="icon-white icon-ban-circle"></i>Supprimer</a>

            <div class="well">
                <div class="row-fluid show-grid">
                    <div class="span3">Lancé le</div>
                    <div class="span1">:</div>
                    <div>{{ coreStatus.startTime }}</div>
                </div>
                <div class="row-fluid show-grid">
                    <div class="span3">Répértoire du noyau</div>
                    <div class="span1">:</div>
                    <div>{{ coreStatus.coreDir }}</div>
                </div>
                <div class="row-fluid show-grid">
                    <div class="span3">Répértoire des données</div>
                    <div class="span1">:</div>
                    <div>{{ coreStatus.dataDir }}</div>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>Index</legend>
            <div class="well">
                <div class="row-fluid show-grid">
                    <div class="span3">Nombre de documents indexés</div>
                    <div class="span1">:</div>
                    <div class="span4">{{ coreStatus.numDocs }}</div>
                </div>
            </div>
        </fieldset>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/bootstrap-modal.js') }}" type="text/javascript"></script>
{% endblock %}
