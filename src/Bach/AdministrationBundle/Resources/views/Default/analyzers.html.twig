{% extends 'AdministrationBundle:Default:main.html.twig' %}

{% block container %}
        <form class="form-inline" action="{{ path('administration_analyzers') }}" method="POST" {{ form_enctype(form) }}>
            <fieldset>
                <legend>{{ _('Analyzers') }}</legend>

                {% for field in form.analyzers %}
                <div class="well">
                    <div class="row-fluid show-grid">
                        <div class="span6">{{ _('Field type name') }} {{ form_widget(field.name) }}</div>
                        <div class="span6">{{ _('Class') }}{{ form_widget(field.class) }}</div>
                    </div>
                </div>
                {% endfor %}
                {{ form_widget(form._token) }}
                <button name="submit" type="submit" class="jbtn">{{ _('Validate') }}</button>
            </fieldset>
        </form>
{% endblock %}

