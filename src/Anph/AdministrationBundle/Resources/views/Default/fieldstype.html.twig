{% extends '::base.html.twig' %} {% block container %}
<!-- MENU -->
{% include 'AdministrationBundle:Default:adminmenu.html.twig' with
{'page': 'fieldstype'}%}
<!-- Our CSS stylesheet file -->
<link
	rel="stylesheet" href="{{ asset('bundles/Uploader/css/styles.css') }}" />
<link
	rel="stylesheet"
	href="{{ asset('bundles/Uploader/css/jquery.fileupload-ui.css') }}" />
<!-- CSS adjustments for browsers with JavaScript disabled -->
<noscript>
	<link rel="stylesheet" href="css/jquery.fileupload-ui-noscript.css">
</noscript>

<body>
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="row-fluid">
				
				<div class="span9">
					<h3>Fields type</h3>
					<div align="right">
						<div class="btn-toolbar">
							<button type="submit" value="selectAll"
								class="btn btn-warning btn-small">
								<i class="icon-white icon-pencil"></i> Tout sélectionner</a>
								<button type="submit" value="deselectAll"
									class="btn btn-danger btn-small">
									<i class="icon-white icon-repeat"></i> Ne rien sélectionner</a>
									<button type="submit" value="add"
										class="btn btn-primary btn-small">
										<i class="icon-white icon-random"></i> ajouter</a>
										<button type="submit" value="remove"
											class="btn btn-inverse btn-small">
											<i class="icon-white icon-ban-circle"></i> supprimer</a>
						
						</div>
					</div>

					<form class="form-inline" action="{{ path('administration_fieldstype') }}" method="POST"
						
						 {{ form_enctype(form) }}>

						<ul class="fields">
							{# iterate over each existing tag and render its only field: name
							#} {% for type in form.types %}
							<div class="well">
								<div class="row-fluid show-grid">
									<div class="span4">Name : {{ form_widget(type.name) }}</div>
									<div class="span4">Class : {{ form_widget(type.class) }}</div>
									<div class="span4">PIG : {{
										form_widget(type.positionIncrementGap) }}</div>

								</div>
								<p></p>
								<div class="row-fluid show-grid">
									<div class="span4">{{ form_widget(type.sortMissingLast)
										}}&nbsp;&nbsp;Sort Missing Last</div>
									<div class="span4">{{ form_widget(type.sortMissingFirst)
										}}&nbsp;&nbsp;Sort Missing First</div>

									<div class="span4">{{
										form_widget(type.autoGeneratePhraseQueries)
										}}&nbsp;&nbsp;Autogenerate phrase queries</div>
								</div>

							</div>
							{% endfor %}
							{{ form_widget(form._token) }}
						</ul>
		                 <button name="submit" type="submit" class="btn btn-fixed btn-success">Valider</button>
						
					</form>

				</div>
			</div>
		</div>

</body>
{% endblock %}

