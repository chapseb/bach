{% extends '::base.html.twig' %} {% block container %}
<!-- MENU -->
{% include 'AdministrationBundle:Default:adminmenu.html.twig' with
{'page': 'dynamicfields'}%}
<!-- Our CSS stylesheet file -->
<link
    rel="stylesheet" href="{{ asset('bundles/Uploader/css/styles.css') }}" />
<link
    rel="stylesheet"
    href="{{ asset('bundles/Uploader/css/jquery.fileupload-ui.css') }}" />
<!-- CSS adjustments for browsers with JavaScript disabled -->
<noscript>
    <link rel="stylesheet" href="css/jquery.fileupload-ui-noscript.css">
</noscript>

    <div class="container-fluid">
        <div class="row-fluid">

            <div class="span9">
                <h3>Dynamic fields</h3>
                <div align="right">
                    <div class="btn-toolbar">
                    <form action="{{ path('administration_dynamicfields') }}" method="POST">
                        <button name="selectAll" type="submit" class="btn btn-warning btn-small" ><i class="icon-white icon-pencil"></i>Tout séléctionner</button> 
                        <button name="deselectAll" type="submit" class="btn btn-danger btn-small" ><iclass="icon-white icon-repeat"></i>Ne rien séléctionner</button> 
                        <button name="add" type="submit" class="btn btn-primary btn-small" ><i class="icon-white icon-random"></i>ajouter</button> 
                        <button name="remove" type="submit" class="btn btn-inverse btn-small" ><i class="icon-white icon-ban-circle"></i>supprimer</button>

                    </form>
                    </div>
                </div>

                <ul class="fields">
                    <form class="form-inline" action="{{ path('administration_dynamicfields') }}" method="POST"

                         {{ form_enctype(form) }}>

                        {% for field in form.dynamicFields %}

                        <div class="well control-group">
                            <div class="controls">
                                <div class="row-fluid show-grid">
                                    <div class="span3">Name {{ form_widget(field.name) }}</div>
                                    <div class="span3">Type {{ form_widget(field.type) }}</div>
                                    <div class="span3">Default {{ form_widget(field.default) }}</div>
                                    <div class="span2">{{ form_widget(field.indexed)
                                        }}&nbsp;&nbsp;Indexed</div>
                                <div class="span1">
                                    <label class="checkbox">
                                        <input type="checkbox" name="test" class="largerCheckbox"/>
                                        <span></span>
                                    </label>
                                </div>
                                </div>

                                <p></p>
                                <div class="row-fluid show-grid">

                                    <div class="span3">&nbsp;&nbsp;&nbsp;</div>
                                    <div class="span3">{{ form_widget(field.stored)
                                        }}&nbsp;&nbsp;Stored</div>
                                    <div class="span3">{{ form_widget(field.multiValued)
                                        }}&nbsp;&nbsp;Multivalued</div>
                                    <div class="span2">{{ form_widget(field.required)
                                        }}&nbsp;&nbsp;Required</div>
                                </div>
                                <!--</div>-->
                            </div>

                        </div>
                        {% endfor %}
                        {{ form_widget(form._token) }}
                        <button name='submit' type="submit" class="btn btn-fixed btn-success">Valider</button>

                </ul>

                    </div>
                </div>
            </div>


            <div id="addNewDynamicField" class="modal hide fade" tabindex="-1"
                role="dialog" aria-labelledby="windowTitleLabel" aria-hidden="true"
                style="display: none;">
                <form action=""
                    method="post">

                    <div class="modal-header">
                        <a href="#" class="close" data-dismiss="modal">×</a>
                        <h3>Ajouter un nouveau champ dynamique</h3>
                    </div>
                    <div class="modal-body" >
                        <div class="divDialogElements">

                    <div class="row-fluid show-grid">
                        <div class="span3">Name</div>
                        <div class="span1">:</div>
                        <div class="span4"></div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span3">Type</div>
                        <div class="span1">:</div>
                        <div class="span4"></div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span3">Valeur par défaut</div>
                        <div class="span1">:</div>
                        <div class="span4"></div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span3">Indexed</div>
                        <div class="span1">:</div>
                        <div class="span4"></div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span3">Stored</div>
                        <div class="span1">:</div>
                        <div class="span4"></div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span3">Multivalued</div>
                        <div class="span1">:</div>
                        <div class="span4"></div>
                    </div>
                    <div class="row-fluid show-grid">
                        <div class="span3">Required</div>
                        <div class="span1">:</div>
                        <div class="span4"></div>
                    </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="#" class="btn" onclick="closeDialog ();">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            OK</a>

                    </div>


                </form>
            </div>
{% endblock %}
